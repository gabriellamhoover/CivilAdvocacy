<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/photoName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhotoLoc"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/photoPosition"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/photoName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/photoName"
        app:layout_constraintTop_toBottomOf="@+id/photoName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/photoPhoto"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/photoName"
        app:layout_constraintStart_toStartOf="@+id/photoName"
        app:layout_constraintTop_toBottomOf="@+id/photoPosition"
        app:layout_constraintVertical_bias="0.173"
        app:srcCompat="@drawable/brokenimage" />

    <ImageView
        android:id="@+id/photoParty"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clickPartyIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/photoPhoto"
        app:layout_constraintStart_toStartOf="@+id/photoPhoto"
        app:layout_constraintTop_toTopOf="@+id/photoPhoto"
        app:layout_constraintVertical_bias="0.956"
        app:srcCompat="@drawable/dem_logo" />

    <TextView
        android:id="@+id/textViewPhotoLoc"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#973987"
        android:gravity="center"
        android:textColor="#F1F1F1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>